package pkg2_value_assignment;

/**
 * @author badizz
 */


public class Main 
{
    public static void main(String[] args) 
    {
        //Tanımlama İşlemleri
        byte bSayisi = (byte) 15;
        short sSayisi = (short) 7;
        int iSayi = 12345;
        long lSayi = 1234567890;
        float fSayi = 1.1234567f; // ekrana virgülden sonraki 7 karakteri yazdırır
        String isim = "badizz";
        boolean dogruMu;
        dogruMu = false;
        boolean yanlisMi = true;
        
        
        //Ekrana Yazdırma İşlemi
        System.out.println("byteSayi = " + bSayisi );
        System.out.println("int Sayı = " + iSayi );
        System.out.println("long Sayı = " + lSayi );
        System.out.println("float Sayı = " + fSayi );
        System.out.println("Name : " + isim );
        System.out.println("Yıl 2016 mı? " + yanlisMi );
        System.out.println("Yıl 2010 mu? " + dogruMu );
        
        
    }
    
}
